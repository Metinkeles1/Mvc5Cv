@using MvcCv.Models.Entity
@model List<TblAdmin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Admin Settings</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>User Name</th>
        <th>Edit</th>        
        <th>Remove</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.KullaniciAdi</td>            
            <td><a href="/Admin/AdminDuzenle/@item.ID" class="btn btn-warning">Edit</a></td>
            <td><a href="/Admin/AdminSil/@item.ID" class="btn btn-danger">Delete</a></td>
        </tr>
    }
</table>

<a href="/Admin/AdminEkle" class="btn btn-primary">Add New Admin</a>