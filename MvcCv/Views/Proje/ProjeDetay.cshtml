@model MvcCv.Models.Entity.TblProjelerim

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Weblog a Blogging Category Bootstrap responsive WebTemplate | Single :: w3layouts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="keywords" content="Weblog a Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />

    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <link href="~/CoreBlogTema-main/web/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link rel="stylesheet" href="~/CoreBlogTema-main/web/css/single.css">
    <link href="~/CoreBlogTema-main/web/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/CoreBlogTema-main/web/css/fontawesome-all.css" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
          rel="stylesheet">
</head>

<body>
    <!--Header-->

    <header>
        <div class="" id="home">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <button class="navbar-toggler navbar-toggler-right mx-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/Default/Index">
                                Home
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

        </div>
    </header>
    <!--//header-->
    <!--//banner-->
    <section class="my-2">
        <!--/blog-->
        <div class="container">
            <div class="row">
                <!--left-->
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                    <div class="blog-grid-top">
                        <div class="b-grid-top">
                            <div class="blog_info_left_grid">
                                <a href="#">
                                    <img src="@Model.ProjeResim1" class="img-fluid h-100" alt="">
                                </a>
                            </div>
                            <div class="blog-info-middle list-example">
                                <ul>
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i>@(((DateTime)Model.Tarih).ToString("dd-MMM-yyyy"))
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#" id="projeLikesCount">
                                            <i class="far fa-thumbs-up"></i> @Model.ProjeBegeniSayisi Likes
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#comments">
                                            <i class="far fa-comment"></i> @ViewBag.mesajSayisi Comments
                                        </a>
                                    </li>

                                </ul>
                            </div>
                        </div>

                        <h3>
                            <a href="single.html">@Model.ProjeName </a>
                        </h3>
                        <p>
                            @Model.ProjeAciklama
                        </p>

                        <div class="card mb-3" style="max-width: 730px;">
                            <div class="row g-0">
                                <div class="col-md-6">
                                    <img src="@Model.ProjeResim2" class="img-fluid rounded-start">
                                </div>
                                <div class="col-md-6">
                                    <div class="card-body">
                                        <p class="card-text">@Model.ProjeResim2Açıklama</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="my-4 ">
                            <div class="my-2">Projenin ilgili dosyalarına ve proje hakkında daha fazla bilgi için aşağıdaki github iconuna tıklayın.</div>
                            <a href="@Model.ProjeLink"><i class="fab fa-github fa-3x text-secondary"></i></a>
                            <span>Github Linki</span>
                        </div>
                    </div>
                    <div id="comments">
                        @Html.Action("_YorumListesi", "projeMesaj")
                    </div>
                    @Html.Action("_ProjeYorumlar","ProjeMesaj")
                </div>

                <!--//left-->
                <!--right-->
                @Html.Action("_TopProject")
                <!--//right-->
            </div>
        </div>
    </section>
    <!--//main-->
    <!--footer-->
    <!---->
    <!-- js -->
    <script src="~/CoreBlogTema-main/web/js/jquery-2.2.3.min.js"></script>
    <!-- //js -->
    <!--/ start-smoth-scrolling -->
    <script src="~/CoreBlogTema-main/web/js/move-top.js"></script>
    <script src="~/CoreBlogTema-main/web/js/easing.js"></script>
    <script>
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top
                }, 900);
            });
        });

    </script>
    <!--// end-smoth-scrolling -->

    <script>
        $(document).ready(function () {
            /*
                                    var defaults = {
                                            containerID: 'toTop', // fading element id
                                        containerHoverID: 'toTopHover', // fading element hover id
                                        scrollSpeed: 1200,
                                        easingType: 'linear'
                                        };
                                    */

            $().UItoTop({
                easingType: 'easeOutQuart'
            });
        });

    </script>
    <a href="#home" class="scroll" id="toTop" style="display: block;">
        <span id="toTopHover" style="opacity: 1;"> </span>
    </a>

    <!-- //Custom-JavaScript-File-Links -->
    <script src="~/CoreBlogTema-main/web/js/bootstrap.js"></script>


</body>

</html>