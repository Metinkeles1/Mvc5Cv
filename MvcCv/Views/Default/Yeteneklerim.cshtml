@using MvcCv.Models.Entity
@model List<TblYeteneklerim>

@{ string renk = "";}
@{ string labelRenk = "";}


<link href="~/Content/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<div class="resume-section-content">
    <h2 class="mb-5">Yeteneklerim</h2>
    <div class="subheading mb-3">Programlama Dilleri & Araçlar</div>
    <ul class="list-inline dev-icons">
        <li class="list-inline-item"><i class="fab fa-html5"></i></li>
        <li class="list-inline-item"><i class="fab fa-css3-alt"></i></li>
        <li class="list-inline-item"><i class="fab fa-js-square"></i></li>
        <li class="list-inline-item"><i class="bi bi-bootstrap"></i></li>
        <li class="list-inline-item"><i class="fab fa-angular"></i></li>
        <li class="list-inline-item"><i class="fab fa-npm"></i></li>
        <li class="list-inline-item"><i class="fab fa-git-alt"></i></li>
        <li class="list-inline-item"><i class="fa-solid fa-code"></i></li>
        <li class="list-inline-item"><i class="bi bi-filetype-sql"></i></li>

    </ul>
    <div class="subheading mb-3">Becerilerim</div>
    <ul class="fa-ul mb-0">
        @foreach (var item in Model)
        {
            if (item.Oran >= 0 && item.Oran <= 50)
            {
                renk = "progress-bar bg-danger";
                labelRenk = "badge bg-danger";
            }
            if (item.Oran >= 51 && item.Oran <= 70)
            {
                renk = "progress-bar bg-warning";
                labelRenk = "badge bg-warning";
            }
            if (item.Oran >= 71 && item.Oran <= 84)
            {
                renk = "progress-bar bg-success";
                labelRenk = "badge bg-success";
            }
            if (item.Oran >= 85 && item.Oran <= 100)
            {
                renk = "progress-bar bg-info";
                labelRenk = "badge bg-info";
            }
        <li>
            <span class="fa-li"><i class="fas fa-check"></i></span>
            @item.Yetenek        
        </li>
        <li>
            <div class="progress progress-xs d-flex justify-content-between">
                <div class="@renk" style="width: @item.Oran%"></div>
                <div><span class="@labelRenk">@item.Oran%</span></div>
            </div>
        </li>        
        }
    </ul>
</div>